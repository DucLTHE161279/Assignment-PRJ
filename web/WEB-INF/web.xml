<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeListController</servlet-name>
        <servlet-class>controller.HomeListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCartController</servlet-name>
        <servlet-class>controller.AddCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOutController</servlet-name>
        <servlet-class>controller.CheckOutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeOptionController</servlet-name>
        <servlet-class>controller.HomeOptionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertStockController</servlet-name>
        <servlet-class>controller.stock.InsertStockController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StockListController</servlet-name>
        <servlet-class>controller.stock.StockListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStockController</servlet-name>
        <servlet-class>controller.stock.UpdateStockController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Discount</servlet-name>
        <servlet-class>controller.Discount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportListController</servlet-name>
        <servlet-class>controller.importmanage.ImportListController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateImportController</servlet-name>
        <servlet-class>controller.importmanage.UpdateImportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertImportController</servlet-name>
        <servlet-class>controller.importmanage.InsertImportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetOrderController</servlet-name>
        <servlet-class>controller.ResetOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeListController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCartController</servlet-name>
        <url-pattern>/addcart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckOutController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeOptionController</servlet-name>
        <url-pattern>/homeoption</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertStockController</servlet-name>
        <url-pattern>/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StockListController</servlet-name>
        <url-pattern>/stocklist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateStockController</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Discount</servlet-name>
        <url-pattern>/discount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportListController</servlet-name>
        <url-pattern>/importlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateImportController</servlet-name>
        <url-pattern>/updateimport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertImportController</servlet-name>
        <url-pattern>/insertimport</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetOrderController</servlet-name>
        <url-pattern>/resetorder</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
